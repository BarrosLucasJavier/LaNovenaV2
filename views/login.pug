extends layout 

block metas 
    title La Novena: Administración 
    meta(name="description", content="Login Administración")

block content 
    main.loginContainer 
        h1 Sección Administración 
        form(action="/admin" method="POST")
            i.fa-solid.fa-screwdriver-wrench
            input#user(type="text", name="user", placeholder ="Usuario")
            input#password(type="password", name="password", placeholder="Contraseña")
            button.btn-light(type="submit")#btnSubmit Ingresar